<!DOCTYPE html>

<div id="result">
    <h3 class="result"> Balance : XXX </h3>
    <h3 class="result"> Debt : XXX </h3>
    <h3 class="result"> Total : XXX </h3>
</div>

<table>
  <tr>
    <th>Date</th>
    <th>Title</th>
    <th>Amount</th>
  </tr>
  <% @records.each do |record| %>
    <tr>
        <td><%= record.created_at %></td>
        <td><%= record.title %></td>
        <td><%= record.amount %></td>
    <td> <%= link_to 'Edit', edit_finance_path(record), class: 'btn btn-sm btn-warning', style: 'font-size:15px' %> </td>
    <td> <%= link_to 'Delete', finance_path(record), method: :delete, class: 'btn btn-sm btn-danger', style: 'font-size:15px', data: {confirm: "Are you sure?"} %> </td>
  </tr>
  <% end %>
</table>